@model IEnumerable<SportsEvents.Models.Event>

@{
    ViewBag.Title = "Index";
}
<body style="background-color:#ADC0CB">
    <style>
        .btn {
            padding-left: 10px;
            padding-right: 10px;
            margin-left: 10px;
        }

        .btn2 {
            padding-left: 10px;
            padding-right: 10px;
            margin-left: 10px;
        }

        .table {
            background-color: #ADC0CB;
        }
    </style>

    <script>
        function relocate_comments() {
            return Views.Comments.Index();
        }
    </script>

    <h2>Index</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.EventName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sport)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sport)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    <button class="btn btn-danger btn-sm subscribeButton">Subscribe</button>
                    <button class="btn2 btn-success btn-sm commentsButton">
                        <a href="/Comments/Index/@item.Id">View Comments</a>
                    </button>
                </td>
            </tr>
        }

    </table>
</body>